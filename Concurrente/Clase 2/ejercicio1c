programa ej1c
procesos
  proceso juntarFlores(ES flores: numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores + 1
  fin
  proceso recorrido(ES flores: numero)
  comenzar
    repetir 9
      juntarFlores(flores)
      mover
    juntarFlores(flores)
  fin
areas
  area1: AreaP(1,1,1,10)
  area2: AreaP(2,11,2,20)
  area3: AreaP(3,21,3,30)
  area4: AreaP(4,31,4,40)
  area5: AreaP(5,41,5,50)
  area6: AreaP(6,51,6,60)
  area7: AreaP(2,1,2,1)
robots
  robot tipo1
  variables
    flores: numero
  comenzar
    flores:= 0
    recorrido(flores)
    EnviarMensaje(flores, rf)
  fin
  robot fiscal
  variables
    fmax, cantf: numero
  comenzar
    fmax:= -1
    repetir 6
      RecibirMensaje(cantf, *)
      si (cantf > fmax)
        fmax:= cantf
    Informar('El ganador junt√≥', fmax)
  fin
variables
  r1, r2, r3, r4, r5, r6: tipo1
  rf: fiscal
comenzar
  AsignarArea(r1, area1)
  AsignarArea(r2, area2)
  AsignarArea(r3, area3)
  AsignarArea(r4, area4)
  AsignarArea(r5, area5)
  AsignarArea(r6, area6)
  AsignarArea(rf, area7)
  Iniciar(r1, 1, 1)
  Iniciar(r2, 2, 11)
  Iniciar(r3, 3, 21)
  Iniciar(r4, 4, 31)
  Iniciar(r5, 5, 41)
  Iniciar(r6, 6, 51)
  Iniciar(rf, 2, 1)
fin